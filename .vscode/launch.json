    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/app/cli.py",
            "args": [
                "--debug",
                "hello",
                "--world"
            ]
          },
          {
            "name": "Python: Test",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "module": "pytest",
            "args": [
                "--cov",
            ]
          }
    ]
}